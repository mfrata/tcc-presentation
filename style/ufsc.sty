% Estilo da capa
\newcommand{\capa}{
	{
    \usebackgroundtemplate
    {%
        \includegraphics[width=\paperwidth, height=\paperheight]{style/capa.pdf}
    }
    \begin{frame}[plain]
    \vspace{-4em}
    
    \makeatletter
    \begin{beamercolorbox}[sep=0.5pt,right]{title}
    \hfill \usebeamerfont{title}{\textcolor{black!40}{\@titulo}}
    \end{beamercolorbox}
    
    \begin{beamercolorbox}[sep=3pt,right]{author}
    \hfill \scriptsize \textbf{\textcolor{black!65}{\@autores}}
    \vskip0.35em
    \hfill \textcolor{black!65}{\@universidade}
    \end{beamercolorbox}

    \end{frame}
    \makeatother
    }
}

